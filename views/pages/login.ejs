<%- include('../common/page-top-layout.ejs', {classes:"transparent"}); %>

<link rel="stylesheet" type="text/css" href="styles/login.css">

<div class="login-container">
    <div class="text-center">
        <section class="card-container">
            <div id="card">
                <figure class="front">
                    <h1 id="welcome">Welcome!</h1>
                    <div class="error text-danger" style="visibility: hidden">Заповніть всі поля!</div>
                    <h6 id="error" class="text-danger" style="visibility: hidden; margin-top: 0">Неправильний логін або
                        пароль. Спробуйте ще раз або зареєструйтеся.</h6>
                    <form class="form" role="form">
                        <div class="form-group">
                            <label class="sr-only" for="signin-username">Username</label>
                            <input type="text" class="form-control" id="signin-username" placeholder="Username"
                                   required>
                        </div>
                        <div class="form-group">
                            <label class="sr-only" for="signin-password">Password</label>
                            <input type="password" class="form-control" id="signin-password" placeholder="Password"
                                   required>
                        </div>
                    </form>
                    <div class="form-group">
                        <button type="submit" class="btn btn-default btn-block sign-in" id="signIn">Sign in</button>
                    </div>
                    <div class="bottom" style="margin-top: 40px;">
                        New here? <a class="fliper-btn" href="#"><b>Sign up!</b></a>
                    </div>
                </figure>

                <figure class="back" style="display: none;">
                    <h1 style="font-family: 'Berkshire Swash', cursive; color: #448D76; padding-bottom: 5px">Sign
                        Up</h1>
                    <div class="error text-danger" style="visibility: hidden">Заповніть всі поля!</div>
                    <div class="form-group" style="margin-bottom: 0;">
                        <div class="input-group">
                            <input type="text" class="form-control" id="signup-username" placeholder="Username">
                            <span class="input-group-addon"> <i class="fa fa-user"></i></span>
                        </div>
                        <div class="danger text-danger" style="visibility: hidden">Already taken.</div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <input type="password" class="form-control" id="signup-password" placeholder="Password">
                            <span class="input-group-addon">
                                                <i class="fa fa-eye"></i>
                                            </span>
                        </div>
                    </div>
                    <input type="submit" class="btn btn-block" id="signUp" value="Sign up">
                    <div class="form-group sign-btn">
                        <br><br>
                        <p>You have already Account So <a href="#" class="signup fliper-btn">Log in</a></p>
                    </div>
                </figure>
            </div>
        </section>
    </div>
</div>

<% include ../common/page-bottom-layout.ejs %>
